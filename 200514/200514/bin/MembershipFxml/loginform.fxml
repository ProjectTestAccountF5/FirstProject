<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="300.0" maxWidth="450.0" prefHeight="300.0" prefWidth="450.0" snapToPixel="false" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login.Service.LoginController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <StackPane prefHeight="60.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="150.0" text="LOGIN">
               <font>
                  <Font name="Segoe UI Black" size="38.0" />
               </font>
            </Label>
         </children>
      </StackPane>
   </top>
   <center>
      <HBox maxHeight="226.0" maxWidth="430.0" prefHeight="226.0" prefWidth="430.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="350.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                     <children>
                        <Label alignment="TOP_CENTER" prefHeight="30.0" prefWidth="100.0" text="ID" textAlignment="CENTER">
                           <font>
                              <Font name="Segoe UI Black" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="loginIdTxt" prefHeight="30.0" prefWidth="200.0" promptText="ID를 입력해주세요" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="30.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="30.0" prefWidth="100.0" text="Password">
                           <font>
                              <Font name="Segoe UI Black" size="18.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="loginPwTxt" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onAction="#LoginProc" prefHeight="30.0" prefWidth="200.0" promptText="Password를 입력해주세요" />
                     </children>
                  </HBox>
                  <Button fx:id="MembershipBtn" mnemonicParsing="false" onAction="#MembershipProc" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: BLACK;" text="회원가입" textFill="WHITE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="FavertalkLoginBtn" mnemonicParsing="false" onAction="#FavertalkProc" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: BLACK;" text="페이버톡으로 로그인" textFill="WHITE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="ExitBtn" mnemonicParsing="false" onAction="#ExitProc" prefHeight="30.0" prefWidth="300.0" style="-fx-background-color: BLACK;" text="종료" textFill="WHITE">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="LoginBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#LoginProc" prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: BLACK;" text="Login" textFill="WHITE" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </center>
</BorderPane>
